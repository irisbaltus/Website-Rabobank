      color: var(--color-red);
    }




   
  </style>

<script>
  const footer = document.querySelector("footer");
  const liItems = document.querySelectorAll("#ul-socials li");

  liItems.forEach(li => {
    li.addEventListener("mouseenter", () => {
      footer.classList.add("hover-active");
    });

    li.addEventListener("mouseleave", () => {
      footer.classList.remove("hover-active");
    });
  });
</script>