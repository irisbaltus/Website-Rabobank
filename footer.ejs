    footer.hover-active .icoon-socials {
      fill: var(--color-red);
    }

    footer.hover-active p {
      color: var(--color-red);
    }

    footer.hover-active #ul-socials {
      border-top: .1em solid var(--color-red);
      border-bottom: .1em solid var(--color-red);
    }

    footer.hover-active #ul-gegevens a {
      color: var(--color-red);
    }

